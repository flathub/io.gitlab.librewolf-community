{
    "id": "io.gitlab.librewolf-community",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "25.08",
    "sdk": "org.freedesktop.Sdk",
    "base": "org.mozilla.firefox.BaseApp",
    "base-version": "25.08",
    "add-extensions": {
        "io.gitlab.librewolf_community.extension": {
            "directory": "extensions",
            "subdirectories": true,
            "merge-dirs": "lib;bin;share",
            "add-ld-path": "lib",
            "autodelete": true,
            "no-autodownload": true
        }
    },
    "command": "librewolf",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pcsc",
        "--socket=pulseaudio",
        "--socket=cups",
        "--persist=.librewolf",
        "--filesystem=xdg-download:rw",
        "--filesystem=xdg-run/speech-dispatcher:ro",
        "--device=dri",
        "--talk-name=org.freedesktop.FileManager1",
        "--system-talk-name=org.freedesktop.NetworkManager",
        "--talk-name=org.a11y.Bus",
        "--talk-name=org.gtk.vfs.*",
        "--env=MOZ_USE_XINPUT2=1",
        "--env=DICPATH=/usr/share/hunspell",
        "--own-name=io.gitlab.librewolf.*",
        "--own-name=io.gitlab.firefox.*",
        "--own-name=org.mpris.MediaPlayer2.firefox.*"
    ],
    "modules": [
        {
            "name": "librewolf",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/lib",
                "mv librewolf-linux.tar.xz /app/lib/librewolf",
                "install -D -m644 /app/lib/librewolf/browser/chrome/icons/default/default128.png /app/share/icons/hicolor/128x128/apps/io.gitlab.librewolf-community.png",
                "install -D -m644 io.gitlab.librewolf-community.appdata.xml -t /app/share/metainfo",
                "install -D -m644 io.gitlab.librewolf-community.desktop -t /app/share/applications",
                "install -D -m755 librewolf.sh /app/bin/librewolf"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://raw.githubusercontent.com/lsfxz/io.gitlab.librewolf-community/refs/heads/147test/librewolf-linux.tar.xz",
                    "sha256": "72ccab18efce51830c3458f548c6cebaee09f3945f536b265c01630ccd35de37",
                    "dest": "librewolf-linux.tar.xz",
                    "strip-components": 1,
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "file",
                    "path": "io.gitlab.librewolf-community.desktop"
                },
                {
                    "type": "file",
                    "path": "io.gitlab.librewolf-community.appdata.xml"
                },
                {
                    "type": "script",
                    "dest-filename": "librewolf.sh",
                    "commands": [
                        "export TMPDIR=\"$XDG_CACHE_HOME/tmp\"",
                        "exec /app/lib/librewolf/librewolf \"$@\""
                    ]
                }
            ],
            "post-install": [
                "mkdir --parents ${FLATPAK_DEST}/extensions"
            ]
        }
    ]
}
